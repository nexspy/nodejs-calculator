{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"typeRoots": ["./node_modules/@types", "./types"],

		"baseUrl": "./",
		"paths": {
			"*": ["node_modules/*", "@types/*", "src/*"],
			"@app/*": ["src/*"],
			"@dtos/*": ["src/dtos/*"],
			"@models/*": ["src/models/*"],
			"@routers/*": ["src/routers/*"],
			"@services/*": ["src/services/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src/**/*", "tests/**/*"]
}
